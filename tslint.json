{
  "rulesDirectory": ["tslint-plugin-prettier"],
  "rules": {
    "no-any": true,
    "prettier": [
      true,
      {
        "printWidth": 140,
        "tabWidth": 2,
        "useTabs": false,
        "semi": true,
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "always"
      }
    ]
  },
  "exclude": ["node_modules"]
}
